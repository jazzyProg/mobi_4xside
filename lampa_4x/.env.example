# Startup behavior:
# - true  => service fails fast if modbus is not reachable
# - false => service starts; /health will be 503 until modbus becomes reachable
STRICT_STARTUP=false

# Optional API prefix (e.g. /api/v1). Leave empty for no prefix.
API_PREFIX=

# === Modbus Controller Configuration ===
MODBUS_IP=10.50.50.11
MODBUS_PORT=502
MODBUS_SLAVE_ID=1
MODBUS_TIMEOUT_SEC=1.0

# Async connect wrapper timeout (seconds)
MODBUS_CONNECT_TIMEOUT_SEC=3.0

# Retry policy for read/write operations
MODBUS_RETRIES=2
MODBUS_RETRY_DELAY_SEC=0.15

# On graceful shutdown: cancel pending pulses and attempt to clear configured bits
SHUTDOWN_CLEAR_BITS=true

# === Signal Pin Configuration ===
# IMPORTANT: BIT_* are 0-based. Example: 3 -> DO4
BIT_SUCCESS=3
BIT_FAIL=2
BIT_ALARM=4
BIT_HEARTBEAT=5

# === Timing Configuration ===
PULSE_DURATION_SEC=3.0

# API
HOST=0.0.0.0
PORT=8002
LOG_LEVEL=INFO
